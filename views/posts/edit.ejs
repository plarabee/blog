<% include ../partials/header %>

<h1 class="text-center">Edit <%= post.title %></h1>
<hr>
<div class="container">
    <form class="mb-2" action="/posts/<%= post._id %>?_method=PUT" method="POST">
        <div class="form-group">
            <input class="form-control" type="text" name="post[title]" value="<%= post.title %>">
        </div>
        <div class="form-group">
            <textarea class="form-control" name="post[content]" rows="15"><%= post.content %></textarea>
        </div>
        <button type="submit" class="btn btn-primary btn-block">Submit</button>
    </form>
    <a class="btn btn-info float-right" href="/posts/<%= post._id %>">Back</a>
</div>

<% include ../partials/footer %>