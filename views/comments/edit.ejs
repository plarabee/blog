<% include ../partials/header %>

<h1 class="text-center">Edit Comment</h1>
<div class="container">
    <div class="row">
        <div class="container">
            <form action="/posts/<%= post_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <textarea class="form-control" type="text" name="comment[text]" rows="15"><%= comment.text %></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block" type="submit">Submit</button>
                </div>
            </form>
            <a class="btn btn-info float-right" href="/posts">Go Back</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>